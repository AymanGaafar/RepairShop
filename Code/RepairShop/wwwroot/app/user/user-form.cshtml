            <label for="UserForm_UserName" class="control-label">@Html.DisplayNameFor(model => model.UserName): </label>
            <input id="UserForm_UserName" name="UserName" type="text" class="form-control flex"
                   placeholder="@Html.DisplayNameFor(model => model.UserName)"
                   ng-class="{invalid: vm.isDirty('UserName') && vm.hasErrors('UserName')}" ng-model="vm.m.UserName" />
        </div>
        <div ng-if="vm.isDirty('UserName')" class="validation-cont">
            <span class="validation-entry" ng-repeat="error in vm.getErrors('UserName')">{{error.errorMessage}}</span>
